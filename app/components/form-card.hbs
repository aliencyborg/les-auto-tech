<div class="w-full max-w-md">
  <form {{on "submit" this.onFormSubmit}}
    class="bg-gray-100 text-black shadow-md rounded px-8 pt-6 pb-8 mb-4">
    {{yield}}
    <div class="flex flex-col items-end justify-between">
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2
        px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
        Submit
      </button>
    </div>
  </form>
</div>